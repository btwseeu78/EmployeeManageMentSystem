<Window x:Class="EMS.Presentation.Fpassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset password" Height="768" Width="1366">
    <Grid>
        <Label Content="Enter Your Employee ID" HorizontalAlignment="Left" Background="Snow" Margin="10,210,0,0" VerticalAlignment="Top" Width="190" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="txtEmployeeId" HorizontalAlignment="Left" Height="23" Margin="220,213,0,0" TextWrapping="Wrap" Text="" Background="Transparent" VerticalAlignment="Top" Width="1128"/>
        <Button Content="Change Pasword" HorizontalAlignment="Left" Margin="220,355,0,0" Background="Transparent" VerticalAlignment="Top"  Width="325" Click="chPwd_Click"/>
        <Label Content="Enter Email" HorizontalAlignment="Left" Background="Snow" Margin="10,275,0,0" VerticalAlignment="Top" Width="190" HorizontalContentAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" x:Name="txtEmail" Height="23"  Margin="220,275,0,0" TextWrapping="Wrap" Text="" Background="Transparent" VerticalAlignment="Top" Width="1128"/>
        <Label Content="Change Password" HorizontalAlignment="Left" Background="IndianRed" Margin="350,44,0,0" VerticalAlignment="Top" Width="670" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
